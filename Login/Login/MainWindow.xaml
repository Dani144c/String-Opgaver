<Window x:Class="Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="250">
    <StackPanel Margin="10">
        <Label Content="Username" Style="{StaticResource RequiredLabel}" />
        <TextBox/>
        <Label Content="Password" Style="{StaticResource RequiredLabel}" />
        <PasswordBox/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="60">
            <Button Content="OK"
                    Width="85"
                    VerticalAlignment="Center"
                    Margin="0 0 10 0"
                    ToolTip="Login with the entered credentials" 
                    Style="{StaticResource HighlightedButton}"/>
            <Button Content="Cancel"
                    Width="85"
                    VerticalAlignment="Center"
                    ToolTip="Cancel the login and exit" 
                    Style="{StaticResource NormalButton}"/>
        </StackPanel>
    </StackPanel>
</Window>